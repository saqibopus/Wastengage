<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="wastengage.valian.com.wastengage.CollectionRequest.CollectionMainFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:gravity="center"
                android:text="Garden Waste Collection Request Form"
                android:textColor="@color/app_green"
                android:textSize="@dimen/_15sdp" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_3sdp"
                            android:text="Name"
                            android:textColor="@color/app_green"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/edittext_background"
                            android:hint="Enter name here "
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:singleLine="true" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5sdp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_3sdp"
                            android:text="Address"
                            android:textColor="@color/app_green"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etSocietyApartment"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/edittext_back_top_curve"
                            android:hint="Society / Apartment"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:singleLine="true" />

                        <EditText
                            android:id="@+id/etArea"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@color/app_grey_light"
                            android:hint="Area"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:singleLine="true" />

                        <EditText
                            android:id="@+id/etNearLocation"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@color/app_grey_light"
                            android:hint="Near Location"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:singleLine="true" />

                        <EditText
                            android:id="@+id/etFamousLandmark"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@color/app_grey_light"
                            android:hint="Famous Landmark"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"

                            android:singleLine="true" />

                        <EditText
                            android:id="@+id/etZipCode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/edittext_back_bottom_curve"
                            android:hint="Zip Code"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:singleLine="true" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5sdp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="Mobile Number"
                            android:textColor="@color/app_green"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/edittext_background"
                            android:hint="Mobile Number"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:singleLine="true" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5sdp"></View>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="60"
                                android:gravity="left|center_vertical"
                                android:text="Select Image"
                                android:textColor="@color/app_green"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imgCamera"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="20"
                                android:src="@drawable/ic_icon_camera" />

                            <ImageView
                                android:id="@+id/imgGallary"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="20"
                                android:src="@drawable/ic_photo_library" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:background="@drawable/edittext_background"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/imgSelected"
                                android:layout_width="match_parent"
                                android:layout_height="158dp"
                                android:layout_margin="@dimen/_10sdp" />
                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5sdp"></View>



                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_marginRight="@dimen/_50sdp"
                        android:background="@color/app_green"
                        android:text="Submit Request"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp">

                </View>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
